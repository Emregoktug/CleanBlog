<%- include('partials/_header') %>

<body>
  <%- include('partials/_navigation') %>

  <header class="masthead" style="background-image: url('<%= post.image %>')">
    <div class="overlay"></div>
    <div class="container">
      <h1>Edit Post</h1>
    </div>
  </header>

  <div class="container mt-4">
    <form
      action="/posts/<%= post._id %>?_method=PUT"
      method="POST"
    >
      <div class="form-group">
        <input
          type="text"
          name="title"
          class="form-control"
          value="<%= post.title %>"
          required
        />
      </div>

      <div class="form-group">
        <textarea
          name="detail"
          class="form-control"
          rows="5"
          required
        ><%= post.detail %></textarea>
      </div>

      <button type="submit" class="btn btn-success">
        Update Post
      </button>
    </form>
  </div>

  <%- include('partials/_footer') %>
</body>
</html>
